!function $linkRes($str)
    !$separator="|"
    !$count = $strSegmentCount($str,$separator) -  1
    !$res = ''
    !while ($count >= 0)
        !$part = $strSegmentGet($str,$separator,$count)
        !$key = $strSegmentGet($part,'!',0)
        !$url = $strSegmentGet($part,'!',1)
        !$keytag = "<" + $key + ">"
